<div class="form-group">
  <%= f.label :street %>
  <%= f.text_area :street, :autofocus => true, class: 'form-control', required: true %>
</div>
<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control', required: true %>
</div>
<div class="form-group">
  <%= f.label :state %>
  <%= f.text_field :state, class: 'form-control', required: true %>
</div>
<div class="form-group">
  <%= f.label :country %>
  <%= f.select :country, Carmen::Country.all.collect(&:name).sort, {}, class: 'form-control', required: true %>
</div>

